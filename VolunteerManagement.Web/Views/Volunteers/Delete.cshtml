@model VolunteerManagement.Domain.Entities.Volunteer

<h1>¿Estás seguro de que quieres eliminar a este voluntario?</h1>
<p>Nombre: @Model.FirstName @Model.LastName</p>
<p>Email: @Model.Email</p>
<p>Teléfono: @Model.PhoneNumber</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Sí, eliminar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
